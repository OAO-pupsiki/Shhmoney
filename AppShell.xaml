<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Shhmoney.Views"
    x:Class="Shhmoney.AppShell"
    FlyoutBehavior="Disabled"
    TabBarIsVisible="False">
    <ShellItem Route="auth" Title="Authentication">
        <ShellSection Route="main" Title="Authentication">
            <ShellContent ContentTemplate="{DataTemplate views:AuthenticationPage}" />
        </ShellSection>
        <ShellSection Route="login" Title="Login">
            <ShellContent ContentTemplate="{DataTemplate views:LoginPage}" />
        </ShellSection>
        <ShellSection Route="signup" Title="Sign Up">
            <ShellContent ContentTemplate="{DataTemplate views:SignUpPage}" />
        </ShellSection>
    </ShellItem>
</Shell>