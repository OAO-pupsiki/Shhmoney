<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               xmlns:viewmodels="clr-namespace:Shhmoney.ViewModels"
               x:Class="Shhmoney.Views.TransactionPopup"
               x:DataType="viewmodels:TransactionViewModel"
               Size="800,800">

    <VerticalStackLayout>
        <RadioButton Content="Income" GroupName="TransactionType" IsChecked="{Binding IsIncome}" />
        <RadioButton Content="Expense" GroupName="TransactionType" />
        <Picker ItemsSource="{Binding Accounts}" SelectedItem="{Binding CurrentAccount}"
                ItemDisplayBinding="{Binding Name}" >
        </Picker>
        <Picker ItemsSource="{Binding Categories}" SelectedItem="{Binding CurrentCategory}"
                ItemDisplayBinding="{Binding Name}" >
        </Picker>
        <Entry Text="{Binding Value}"/>
        <Entry Text="{Binding Name}"/>
        <Entry Text="{Binding Description}"/>

        <DatePicker Date="{Binding Date}"/>
        <TimePicker Time="{Binding Time}"/>
        <Button Text="Save" 
                Clicked="SaveButtonClicked"/>
        <Button Text="Cancel"
                Clicked="CancelButtonClicked"/>
    </VerticalStackLayout>

</toolkit:Popup>